<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head.ejs') %>
<body>
   <%- include('./partials/nav.ejs') %>

    <div class="blog_content">
        <h2>All blogs</h2>
       <% if(blogs.length > 0) { %>
      <% blogs.forEach(blogs=> { %>
       <a href="/blogs/<%= blogs._id %>">
        <h3 class="title"><%= blogs.title %></h3>
        <p class="snippet"><%= blogs.snippet %></p>
       </a>

        <% }) %>

        <% } %>
    </div>
    <%- include('./partials/footer.ejs') %>
</body>
</html>